<UserControl x:Class="WpfColorPicker.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfColorPicker"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="colorPicker"
             Height="400">
    <DockPanel>
        <local:SaturationBrightnessPicker DockPanel.Dock="Left" Width="400"
                                          DataContext="{Binding ElementName=colorPicker}"
                                          Color="{Binding Color, Mode=TwoWay}"
                                          Hue="{Binding Hue, Mode=OneWay}"/>
        <local:HuePicker DockPanel.Dock="Left" Margin="10, 0" HorizontalAlignment="Left" Width="40"
                         DataContext="{Binding ElementName=colorPicker}"
                         SelectedHue="{Binding Hue, Mode=TwoWay}"/>
        <DockPanel>
            <TextBox DockPanel.Dock="Top" Height="30" VerticalAlignment="Top" Width="100"
                     DataContext="{Binding ElementName=colorPicker}"
                     Text="{Binding Color}"/>
            <TextBox DockPanel.Dock="Top" Height="30" VerticalAlignment="Top" Width="100"
                     DataContext="{Binding ElementName=colorPicker}"
                     Text="{Binding Hue}"/>
        </DockPanel>
    </DockPanel>
</UserControl>
